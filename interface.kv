GerenciadorJanelas:
    MenuPrincipal:
    SessaoFlashcards:
    Configuracoes:

<MenuPrincipal>:
    name: "menu"
    GridLayout:
        cols: 1
        size: root.width, root.height

        Label:
            text: "Menu"
            font_size: 32

        GridLayout:
            cols: 3
            row_default_height: 240
            row_force_default: True
            padding: 10

            Button:
                text: "Começar"
                font_size: 32
                on_release:
                    app.root.current = "sessao"
                    root.manager.transition.direction = "left"

            Button:
                text: "Configurações"
                font_size: 32
                on_release:
                    app.root.current = "configuracoes"
                    root.manager.transition.direction = "left"

            Button:
                text: "Sair"        
                font_size: 32
                on_release:
                    exit()

<SessaoFlashcards>:
    name: "sessao"    
    GridLayout:
        cols: 1
        size: root.width, root.height
        Label:
            text: "Sessao"
            font_size: 32

        GridLayout:
            cols: 2

            Button:
                text: "Voltar para o Menu"
                font_size: 32
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

<Configuracoes>:
    name: "configuracoes"
